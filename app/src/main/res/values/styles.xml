<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- My Theme -->
    <style name="TemaBaruTiara" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/myPrimary</item>
        <item name="colorPrimaryDark">@color/myPrimaryDark</item>
        <item name="tabBackgroundColor">@color/myLightBackground</item>
        <item name="toolbarBackgroundColor">@color/myLayoutColor</item>
        <item name="textDarkColor">@color/myPrimaryDark</item>
        <item name="textTabColor">@color/myText</item>
        <item name="textWhiteColor">@color/myTextLight</item>
        <item name="detailBackground">@color/myTransparent</item>
    </style>

    <style name="SecondTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/pantone331c</item>
        <item name="colorPrimaryDark">@color/pantoneDark331c</item>
        <item name="tabBackgroundColor">@color/pantone331c</item>
        <item name="toolbarBackgroundColor">@color/pantone331c</item>
        <item name="textDarkColor">@color/pantoneDark331c</item>
        <item name="textWhiteColor">@color/myTextLight</item>
        <item name="detailBackground">@color/myLayoutColor</item>
        <item name="imageTransparentOverlay">@color/pantoneTransparent</item>
    </style>

    <style name="TemaTiara" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/pinkOne</item>
        <item name="colorButtonNormal">@color/pinkTwo</item>
        <item name="colorPrimary">@color/pinkThree</item>
        <item name="toolbarBackgroundColor">@color/pinkFour</item>
        <item name="tabBackgroundColor">@color/pinkFive</item>
        <item name="colorAccent">@color/pinkSix</item>
    </style>
</resources>